@model Category

<div class="container w-50">
    <div class="row pt-4 pb-3 d-flex align-items-center">
        <div class="col-6" style="height: 100px;">
            <h1 class="text-primary m-0">
                Edit Category
            </h1>
        </div>
    </div>
    <form id="editCategoryForm" method="post" asp-controller="Category" asp-action="Edit">

        <div asp-validation-summary="ModelOnly"></div>
        <input asp-for="CategoryId" hidden/>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input class="form-control" asp-for="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mt-2">
            <label asp-for="DisplayOrder"></label>
            <input class="form-control" asp-for="DisplayOrder" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-end">
            <button type="submit" class="mt-3 mx-2 btn btn-warning rounded-pill">
                <i class="bi bi-check-all"></i> Edit
            </button>
            <a class="mt-3 btn btn-danger rounded-pill" asp-controller="Category" asp-action="Index">
                <i class="bi bi-x-circle-fill"></i> Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}